<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Base.Theme.RickAndMorty" parent="Theme.MaterialComponents.DayNight">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/secondary</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item
			name="android:statusBarColor">?attr/colorSecondary
		</item>
		<!-- Customize your theme here. -->
		<item name="android:buttonStyle">@style/Widget.RickAndMorty.Button</item>
	</style>

	<style name="Theme.RickAndMorty" parent="Base.Theme.RickAndMorty" />

	<style name="Theme.RickAndMorty.NoActionBar" parent="Base.Theme.RickAndMorty">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
</resources>