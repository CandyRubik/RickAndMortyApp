<resources>
    <!-- Base application theme. -->
    <style name="Base.Night.Theme.RickAndMorty" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:buttonStyle">@style/Widget.RickAndMorty.Button</item>
    </style>

    <style name="Theme.Night.RickAndMorty.NoActionBar" parent="Base.Night.Theme.RickAndMorty">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>